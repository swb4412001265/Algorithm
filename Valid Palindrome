class Solution {
public:
    /**
     * @param s A string
     * @return Whether the string is a valid palindrome
     */
    bool isPalindrome(string& s) {
        // Write your code here
        if(s.size() == 0) {
            return true;
        }
        bool mark = false;
        string tmp = s;
        for(int i = 0; i < tmp.size(); ++i) {
            if(!isalnum(tmp[i])) {
                tmp.erase(tmp.begin() + i);
                i--;
            } else {
                tmp[i] = tolower(tmp[i]);
            }
        }
        int start = 0;
        int end = tmp.size() - 1;
        bool flag = true;
        while(start < end) {
            if(tmp[start] != tmp[end]) {
                flag = false;
                break;
            }
            start++;
            end--;
        }
        return flag;
    }
};
